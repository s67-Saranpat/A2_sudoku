void setup() {
  size(450, 450);
  background(255);
  int cols = 3;   
  int rows = 3;   
  int cellWidth = width / cols;
  int cellHeight = height / rows;
  
 
  for (int i = 0; i < cols; i++) {
    for (int j = 0; j < rows; j++) {
      
      drawSudokuGrid(i * cellWidth, j * cellHeight, cellWidth, cellHeight);
    }
  }
  
  
  strokeWeight(4);
  for (int i = 0; i <= cols; i++) {
    line(i * cellWidth, 0, i * cellWidth, height);  
    line(0, i * cellHeight, width, i * cellHeight); 
  }
}

void drawSudokuGrid(int x, int y, int cellWidth, int cellHeight) {
  int innerCols = 3; 
  int innerRows = 3;  
  int innerCellWidth = cellWidth / innerCols;
  int innerCellHeight = cellHeight / innerRows;
  
  
  strokeWeight(1);  
  for (int i = 1; i < innerCols; i++) {
    line(x + i * innerCellWidth, y, x + i * innerCellWidth, y + cellHeight); 
    line(x, y + i * innerCellHeight, x + cellWidth, y + i * innerCellHeight); 
  }
}
